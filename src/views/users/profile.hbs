        </div>
        <div class="user-data">
            <div class="points">Puntos: {{points}}</div>
        </div>
    </div>
    <hr class="line-div" />
    <div class="profile-options">
        {{> buttons/button_link url='/profile/change-username' content='Cambiar Nombre de Usuario'}}
