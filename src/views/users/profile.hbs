<div class="profile container">
    <div class="profile-data">
        <div class="user-title">
            <div class="user-img-container">
                {{#if (compare user.user_img "No photo")}}
                    <form
                        action="/profile/userImg"
                        method="post"
                        id="add-user-form"
                        enctype="multipart/form-data"
                    >
                        <label class="no-user-img-label" for="no-user-img">Elija
                            una Imagen</label>
                        <input
                            type="file"
                            class="no-user-img"
                            id="no-user-img"
                            name="user_img"
                        />
                    </form>
                {{else}}
                    <img
                        src="/{{user.user_img}}"
                        class="user-img"
                        id="user-img"
                    />
                    <form
                        action="/profile/userImg"
                        method="post"
                        id="add-user-form"
                        enctype="multipart/form-data"
                        class="changeimg-container"
                    >
                        <label class="no-user-img-label" for="no-user-img">
                            <svg
                                width="22"
                                height="22"
                                viewBox="0 0 24 24"
                                stroke-width="2"
                                stroke="currentColor"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path
                                    stroke="none"
                                    d="M0 0h24v24H0z"
                                    fill="none"
                                ></path>
                                <path d="M15 8h.01"></path>
                                <path
                                    d="M11 20h-4a3 3 0 0 1 -3 -3v-10a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v4"
                                ></path>
                                <path
                                    d="M4 15l4 -4c.928 -.893 2.072 -.893 3 0l3 3"
                                ></path>
                                <path
                                    d="M14 14l1 -1c.31 -.298 .644 -.497 .987 -.596"
                                ></path>
                                <path
                                    d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z"
                                ></path>
                            </svg>
                        </label>
                        <input
                            type="file"
                            class="no-user-img"
                            id="no-user-img"
                            name="user_img"
                        />
                    </form>
                {{/if}}
            </div>
            <h1 class="user-name">{{user.username}}</h1>
        </div>
        <div class="user-data">
            <div class="points">Puntos: {{points}}</div>
        </div>
    </div>
    <hr class="line-div" />
    <div class="profile-options">
        <a href="/profile/change-username" class="button link">Cambiar Nombre de
            Usuario</a>
        <a href="/profile/change-password" class="button link">Cambiar
            ContraseÃ±a</a>
        <a href="/profile/delete-account" class="button link danger">Eliminar
            Cuenta</a>
    </div>
</div>
