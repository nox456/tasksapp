<div class="h-full flex flex-col items-center justify-around">
    <h1 class="text-2xl font-bold">Cambiar Contraseña</h1>
    <form action="/changePassword" method="post" class="flex flex-col gap-4 w-2/5">
        {{> inputs/input type='password' name='password' placeholder='Ingrese su contraseña actual' label='Contraseña Actual' id='password-input'}}
        {{> inputs/input type='password' name='newPassword' placeholder='Ingrese su nueva contraseña' label='Nueva Contraseña' id='newPassword-input'}}
        <input type="hidden" name="username" value="{{user.username}}" />
        {{> buttons/button_submit content='Actualizar' class='py-2'}}
    </form>
</div>
