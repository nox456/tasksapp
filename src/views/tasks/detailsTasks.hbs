<div class="h-full grid grid-cols-[80%_20%] grid-rows-[20%_10%_70%]">
    <div class="row-start-1 col-start-1 flex items-center px-4 border-r-2 border-[#c5bde5]">
        <h2 class="text-4xl font-bold">{{task.title}}</h2>
    </div>
    <div class="row-start-2 col-start-1 px-4 border-t-2 border-r-2 border-[#c5bde5]">
        <h3 class="font-semibold text-gray-400">Categoria:</h3>
        <p class="pl-2">{{task.category}}</p>
    </div>
    <div class="row-start-1 col-start-2 flex flex-col items-end justify-center px-4">
        <div>
            <h3 class="font-semibold text-gray-400">Creado el:</h3>
            <p class="pl-2">{{task.created_at}}</p>
        </div>
        <div>
            <h3 class="font-semibold text-gray-400">Finaliza el:</h3>
            <p class="pl-2">{{task.finish_at}}</p>
        </div>
    </div>
    <div class="row-start-2 col-start-2 flex items-center justify-center border-t-2 border-[#c5bde5]">
        <p class="font-semibold text-center">
        {{#if task.done}}
            Hecha
        {{else}}
            No Hecha
        {{/if}}
        </p>
    </div>
    <div class="row-start-3 col-span-2 p-4 border-t-2 border-[#c5bde5]">
        <p class="font-semibold text-lg">{{task.description}}</p>
    </div>
</div>
