<div class="w-16 h-16 rounded-full overflow-hidden {{class}} relative [&>form]:hover:block">
    {{#if (compare userImg "No photo")}}
        {{#if change}}
            <form
                action="/profile/userImg"
                method="post"
                id="add-user-form"
                enctype="multipart/form-data"
            >
                <label for="no-user-img">Elija una
                    Imagen</label>
                <input
                    type="file"
                    id="no-user-img"
                    name="user_img"
                />
            </form>
        {{else}}
            <div class="flex justify-center">
                <svg
                    width="34"
                    height="34"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                    <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                </svg>
            </div>
        {{/if}}
    {{else}}
        <img src="/{{userImg}}" class="w-full h-full object-cover absolute" />
        {{#if change}}
            <form
                action="/profile/userImg"
                method="post"
                id="add-user-form"
                enctype="multipart/form-data"
                class="absolute z-20 top-[50%] left-[50%] w-full h-full hidden"
            >
                <label for="no-user-img" class="text-black cursor-pointer bg-[#c5bde5] w-full h-full block p-2 rounded-lg">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path
                            stroke="none"
                            d="M0 0h24v24H0z"
                            fill="none"
                        ></path>
                        <path d="M15 8h.01"></path>
                        <path
                            d="M11 20h-4a3 3 0 0 1 -3 -3v-10a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v4"
                        ></path>
                        <path
                            d="M4 15l4 -4c.928 -.893 2.072 -.893 3 0l3 3"
                        ></path>
                        <path
                            d="M14 14l1 -1c.31 -.298 .644 -.497 .987 -.596"
                        ></path>
                        <path
                            d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z"
                        ></path>
                    </svg>
                </label>
                <input
                    type="file"
                    id="no-user-img"
                    name="user_img"
                    class="hidden"
                />
            </form>
        {{/if}}
    {{/if}}
</div>
