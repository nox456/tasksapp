<div class="list-container" id="list-container">
    {{#each habits}}
        <div class="habit-container element">
            <i class="gg-chevron-down expand-icon" id="expand-icon"></i>
            <h1 class="habit-title">{{this.title}}</h1>
            <p class="habit-category category-expand">{{this.category}}</p>
            <ul class="days-container days-expand" id="days-container">
                {{#if (checkDays this.days "Lunes")}}
                    <li class="day selected">Lunes</li>
                {{else}}
                    <li class="day">Lunes</li>
                {{/if}}

                {{#if (checkDays this.days "Martes")}}
                    <li class="day selected">Martes</li>
                {{else}}
                    <li class="day">Martes</li>
                {{/if}}

                {{#if (checkDays this.days "Miercoles")}}
                    <li class="day selected">Miercoles</li>
                {{else}}
                    <li class="day">Miercoles</li>
                {{/if}}

                {{#if (checkDays this.days "Jueves")}}
                    <li class="day selected">Jueves</li>
                {{else}}
                    <li class="day">Jueves</li>
                {{/if}}

                {{#if (checkDays this.days "Viernes")}}
                    <li class="day selected">Viernes</li>
                {{else}}
                    <li class="day">Viernes</li>
                {{/if}}

                {{#if (checkDays this.days "Sabado")}}
                    <li class="day selected">Sabado</li>
                {{else}}
                    <li class="day">Sabado</li>
                {{/if}}

                {{#if (checkDays this.days "Domingo")}}
                    <li class="day selected">Domingo</li>
                {{else}}
                    <li class="day">Domingo</li>
                {{/if}}
            </ul>
            <div class="list-options-container options-expand">
                <button class="button update-button">
                    <form action="/habits/update" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <i class="gg-pen icon"></i>
                        <input
                            type="submit"
                            value="Modificar"
                            class="option-button"
                        />
                    </form>
                </button>
                <div class="button delete-button">
                    <i class="gg-erase icon"></i>
                    <button
                        class="option-button"
                        id="delete-button"
                    >Eliminar</button>
                </div>
                <button class="button detail-button">
                    <form action="/habits/detail" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <i class="gg-menu-left icon"></i>
                        <input
                            type="submit"
                            value="Detalles"
                            class="option-button"
                        />
                    </form>
                </button>
            </div>
        </div>
        <div class="blur-container" id="blur-container">
            <div class="confirm-container" id="confirm-container">
                <p class="confirm-text">¿Está Seguro?</p>
                <div class="confirm-buttons-container">
                    <form action="/habitsDelete" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input type="submit" value="Si" class="button" />
                    </form>
                    <button class="button confirm-button-no">No</button>
                </div>
            </div>
        </div>
    {{else}}
        <p class="no-habits" id="no-habits">No Hay Ningun Habito Creado</p>
    {{/each}}
</div>
