<div class="input-container">
    <div class="input-container-body">
        <label for="username-input">Usuario</label>
        <input
            type="username"
            name="username"
            autocomplete="off"
            placeholder="Ingrese su usuario"
            class="input"
            id="username-input"
        />
    </div>
    {{#if usernameMessage}}
        <span class="error-text">{{usernameMessage}}</span>
    {{/if}}
</div>
