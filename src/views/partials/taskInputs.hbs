        <div class="input-container">
            <label for="title-input">Titulo</label>
            <input
                class="title input"
                type="text"
                name="title"
                placeholder="Ingrese un titulo"
                value="{{title}}"
                autofocus
                id="title-input"
            />
        </div>
        <div class="input-container">
            <label for="description-input">Descripcion</label>
            <input
            class="description input"
            name="description"
            placeholder="Ingrese una descripcion"
            id="description-input"
            value="{{description}}"
            >
        </div>
        <div class="input-container"> 
            <label for="finished-input">Fecha de finalizaci√≥n:</label>
            <input
                class="finished input"
                type="date"
                name="finished_at"
                id="finished-input"
                value="{{finish_at}}"
            />
        </div>
        <div class="input-container">
            <label for="category-select">Categoria:</label>
            <select
                name="category"
                id="category-select"
                class="category input"
            >
                <option hidden>Seleccione</option>
                <option {{#if (compare this.category 'Academica')}}
                    selected
                    {{/if}} 
                    value="Academica">Academica
                </option>
                <option {{#if (compare this.category 'Salud')}}
                    selected
                    {{/if}}
                    value="Salud">Salud
                </option>

                <option {{#if (compare this.category 'Practica')}}
                    selected
                    {{/if}}
                    value="Practica">Practica
                </option>
                <option {{#if (compare this.category 'Laboral')}}
                    selected
                    {{/if}}
                    value="Laboral">Laboral
                </option>
            </select>
        </div>
