<aside class="sidebar" id="sidebar">
    <ul>
        {{#unless noUserImgSidebar}}
            <li>
                <div class="user-img-container">
                    {{#if (compare user.user_img "No photo")}}
                        <div class="no-user-img-container">
                            <svg
                                width="34"
                                height="34"
                                viewBox="0 0 24 24"
                                stroke-width="2"
                                stroke="currentColor"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path
                                    stroke="none"
                                    d="M0 0h24v24H0z"
                                    fill="none"
                                ></path>
                                <path
                                    d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"
                                ></path>
                                <path
                                    d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"
                                ></path>
                            </svg>
                        </div>
                    {{else}}
                        <img src="/{{user.user_img}}" class="user-img" />
                    {{/if}}
                </div>
                <p class="username-container">{{user.username}}</p>
            </li>
        {{/unless}}
        {{#unless noProfileLink}}
            <hr class="line-div" />
            <li><a href="/profile" class="link">Ver Perfil</a></li>
        {{/unless}}
        <hr class="line-div" />
        <li><a href="/tasks/list" class="link">Lista de Tareas</a></li>
        <hr class="line-div" />
        <li><a href="/habits/list" class="link">Lista de Habitos</a></li>
        <hr class="line-div" />
        <li><a href="/scoretable" class="link">Clasificacion</a></li>
        <hr class="line-div" />
        <li class="logout" id="logout-button">
            <button class="button">Cerrar Sesion</button>
        </li>
    </ul>
</aside>
