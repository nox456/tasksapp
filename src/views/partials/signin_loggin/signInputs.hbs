<div>
    {{> inputs/input id='username-input' label='Usuario' type='text' name='username' placeholder='Ingrese su usuario'}}
    {{#if usernameMessage}}
        <span class="text-sm text-blue-300">{{usernameMessage}}</span>
    {{/if}}
    {{#if usernameExists}}
        <span class="text-sm text-blue-300">{{usernameExists}}</span>
    {{/if}} 
    {{#if dataErr}}
        <span class="text-sm text-blue-300">{{dataErr}}</span>
    {{/if}}
</div>
<div>
    {{> inputs/input id='password-inpu' label='Contraseña' type='password' name='password' placeholder='Ingrese su contraseña'}}
    {{#if passwordMessage}}
        <span class="text-sm text-blue-300">{{passwordMessage}}</span>
    {{/if}}
    {{#if dataErr}}
        <span class="text-sm text-blue-300">{{dataErr}}</span>
    {{/if}}
</div>
