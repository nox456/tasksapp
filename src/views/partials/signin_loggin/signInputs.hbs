<div class="[&>span]:text-sm [&>span]:text-blue-300">
    {{> inputs/input id='username-input' label='Usuario' type='text' name='username' placeholder='Ingrese su usuario'}}
    {{#if usernameMessage}}
        <span">{{usernameMessage}}</span>
    {{/if}}
    {{#if usernameExists}}
        <span>{{usernameExists}}</span>
    {{/if}} 
    {{#if dataErr}}
        <span>{{dataErr}}</span>
    {{/if}}
</div>
<div class="[&>span]:text-sm [&>span]:text-blue-300">
    {{> inputs/input id='password-inpu' label='Contraseña' type='password' name='password' placeholder='Ingrese su contraseña'}}
    {{#if passwordMessage}}
        <span>{{passwordMessage}}</span>
    {{/if}}
    {{#if dataErr}}
        <span>{{dataErr}}</span>
    {{/if}}
</div>
