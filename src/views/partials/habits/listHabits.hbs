<div class="list-container" id="list-container">
    {{#each habits}}
        <div class="hidden">
            <div class="icon-container close">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-chevron-up"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M6 15l6 -6l6 6"></path>
                </svg>
            </div>
            <h1 class="habit-title">{{this.title}}</h1>
            <p class="habit-category category-expand">{{this.category}}</p>
            <ul class="days-container days-expand" id="days-container">
                {{#if (checkDays this.days "Lunes")}}
                    <li class="day selected">Lunes</li>
                {{else}}
                    <li class="day">Lunes</li>
                {{/if}}

                {{#if (checkDays this.days "Martes")}}
                    <li class="day selected">Martes</li>
                {{else}}
                    <li class="day">Martes</li>
                {{/if}}

                {{#if (checkDays this.days "Miercoles")}}
                    <li class="day selected">Miercoles</li>
                {{else}}
                    <li class="day">Miercoles</li>
                {{/if}}

                {{#if (checkDays this.days "Jueves")}}
                    <li class="day selected">Jueves</li>
                {{else}}
                    <li class="day">Jueves</li>
                {{/if}}

                {{#if (checkDays this.days "Viernes")}}
                    <li class="day selected">Viernes</li>
                {{else}}
                    <li class="day">Viernes</li>
                {{/if}}

                {{#if (checkDays this.days "Sabado")}}
                    <li class="day selected">Sabado</li>
                {{else}}
                    <li class="day">Sabado</li>
                {{/if}}

                {{#if (checkDays this.days "Domingo")}}
                    <li class="day selected">Domingo</li>
                {{else}}
                    <li class="day">Domingo</li>
                {{/if}}
            </ul>
            <div class="list-options-container options-expand">
                {{#> buttons/button_element action='/habits/update' elementId=this.id content='Modificar' class='update'}}
                    <svg width="18" height="18" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                        <path d="M16 5l3 3"></path>
                    </svg>
                {{/buttons/button_element}}
                {{#> buttons/button_element class='delete' isDelete=true }}
                    <svg width="18" height="18" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M4 7l16 0"></path>
                        <path d="M10 11l0 6"></path>
                        <path d="M14 11l0 6"></path>
                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                    </svg>
                {{/buttons/button_element}}
                {{#> buttons/button_element action='/habits/detail' content='Detalles' elementId=this.id class='detail'}}
                    <svg width="18" height="18" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                        <path d="M9 17h6"></path>
                        <path d="M9 13h6"></path>
                    </svg>
                {{/buttons/button_element}}
            </div>
        </div>
        <div class="blur-container" id="blur-container">
            <div class="confirm-container" id="confirm-container">
                <p class="confirm-text">¿Está Seguro?</p>
                <div class="confirm-buttons-container">
                    <form action="/habitsDelete" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input type="submit" value="Si" class="button" />
                    </form>
                    <button class="button confirm-button-no">No</button>
                </div>
            </div>
        </div>
    {{else}}
        <p class="no-habits" id="no-habits">No Hay Ningun Habito Creado</p>
    {{/each}}
</div>
